{
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "declaration": true,
    "declarationDir": "./tmp/types",
    "emitDeclarationOnly": true,
    "isolatedModules": true,
    "lib": ["ESNext", "DOM"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      "#data": ["./src/data"],
      "#data/*": ["./src/data/*"],
      "#globals": ["./src/globals"],
      "#globals/*": ["./src/globals/*"],
      "#models": ["./src/models"],
      "#models/*": ["./src/models/*"],
      "ellma": ["."],
      "ellma/integrations": ["./integrations/src"],
      "ellma/integrations/*": ["./integrations/src/*"],
      "ellma/peripherals": ["./peripherals/src"],
      "ellma/peripherals/*": ["./peripherals/src/*"],
      "ellma/*": ["./src/*"]
    },
    "resolveJsonModule": true,
    "rootDir": ".",
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext",
    "useDefineForClassFields": true,
    "verbatimModuleSyntax": true
  },
  "include": ["./**/*.d.ts", "./**/*.ts"]
}
